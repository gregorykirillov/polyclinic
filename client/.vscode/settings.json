{
    "eslint.run": "onSave",
    "eslint.format.enable": true,
    "typescript.format.enable": true,
    
    "editor.formatOnSaveMode": "file",
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },

    "files.associations": {
        "*.js": "javascript",
        "*.ts": "typescript"
    }
}
